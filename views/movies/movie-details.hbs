<section class="top">
    <div>
        <a href="/movies" class="btn btn-white" style="margin-bottom: 1em">‚Üê Back to movies</a>
        <h2>{{movie.title}}</h2>
        <p>Genre: <em>{{movie.genre}}</em></p>
    </div>
    <div class="actions">
        <form action="/movies/{{movie._id}}/delete" method="post">
            <input type="submit" value="&#128465; Delete" class="btn btn-white">
        </form>
        <a href="/movies/{{movie._id}}/edit" class="btn btn-white">&#9998; Edit</a>
    </div>
</section>
<section class="main details">
    <div class="info">
        <p>{{movie.plot}}</p>
    </div>
    <div class="cast">
        <h3 style="margin-bottom:1em">Cast</h3>
        <div class="container">
            {{#each movie.cast}}
            <article>
                <a href="/celebs/{{this._id}}">
                    <h3>{{this.name}}</h3>
                    <p>{{this.occupation}}</p>
                    <span class="btn btn-blue">Read more</span>
                </a>
            </article>
            {{/each}}

        </div>
    </div>


</section>